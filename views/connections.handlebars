{{> navbar/main-navbar}}

<section class="section">
    <div class="container">


        <div class="columns is-gapless is-centered">
            <div class="column is-1 mr-5">
                <figure class="image is-1by1">
                    <img class="user-image">
                </figure>
            </div>
            <div class="column is-4">
                <h1 class="is-size-1" id="welcome-message"></h1>
                <h2>Your ulti-mutt list of connections </h2>
            </div>
        </div>
        <div id="connections" class="columns is-multiline">
            {{#each connections}}

                <div class="column is-3">
                    <div class="card">
                        <div class="card-image">
                            <figure class="image is-4by3">
                                <img id="connections-image" src={{imageLink}} alt="Placeholder image">
                            </figure>
                        </div>
                        <div class="card-content">
                            <div class="columns">
                                <div class="column is-8">
                                    <div class="media">
                                        <div class="media-content">
                                            <h3 class="title is-4">{{dogName}}</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="column is-4">
                                    <i class="fas fa-bone fa-lg"></i> {{treatPoints}}
                                </div>
                            </div>
                            <div class="columns">
                                <div class="column is-full pr-0">
                                    <div class="content">
                                        <ul>
                                            <li>{{city}} 📍</li>
                                            <li>{{dogAge}} 🎂</li>
                                            <li>{{dogBreed}} 🐶</li>
                                            <li>{{friendliness}} 😁</li>
                                            <li>{{#if dogVaccinated}} <p>Vaccinated 💉</p>{{else}} <p>Not Vaccinated💉</p> {{/if}}</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="field has-text-centered mt-1">
                        <button value={{email}} data-id={{id}} class="button message-button is-primary"><i class="far fa-envelope"></i>Message</button>

                        <button class="button meet-button is-light"><i class="fas fa-paw"></i>We Met
                            Up!</button></a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>

    {{!-- meet modal --}}
    <div class="modal meet-modal">
        <div class="modal-background"></div>
        <div class="modal-card">
            <header class="modal-card-head">
                <p class="modal-card-title">Paw yeah! You met up with a fur-friend!</p>
                <button class="delete" aria-label="close"></button>
            </header>
            <section class="modal-card-body">
                <!-- Content ... -->
                <p>You now have 110 treat points!</p>
            </section>
            <footer class="modal-card-foot">
                <a href="/treat-points" class="button is-primary">Treat Leader board</a>
                <button class="back-button button">Go back</button>
            </footer>
        </div>
    </div>



    </div>



</section>
<script src="/assets/js/connections.js"></script>